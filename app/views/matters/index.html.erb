<h1>Listing matters</h1>

<table>
  <tr>
    <th>Client</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @matters.each do |matter| %>
  <tr>
    <td><%= matter.client_id %></td>
    <td><%= matter.name %></td>
    <td><%= link_to 'Show', matter %></td>
    <td><%= link_to 'Edit', edit_matter_path(matter) %></td>
    <td><%= link_to 'Destroy', matter, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

