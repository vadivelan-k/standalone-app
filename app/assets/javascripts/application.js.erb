// formtastic date picker
$(document).ready(function(){
  $("input.ui-date-picker").datepicker({
     showOn: 'button',
     buttonImage: '<%= asset_path 'calendar.gif' %>',
     buttonImageOnly: true,
     changeMonth: true,
     changeYear: true,
     showAnim: 'slideDown',
     duration: 'fast'
  });
});
// fix default selected value in multiple select.  e.g. the clients multiple select box in view draft invoices
$(document).ready(function(){
  $("select[multiple=multiple]").each(function(i){
    var v = $(this).val();
    if (!v || (v.length == 1 && v[0] == "")) {
      $(this).val([""]);
    }
  });
});
